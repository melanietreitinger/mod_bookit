{{!
    @template mod_bookit/masterchecklist/bookit_checklist_drag_handle
    This template renders a drag handle for sortable checklist items.

    Example context (json):
    {
        "id": 1,
        "type": "item"
    }
}}
<td class="bookit-drag-handle align-middle text-center py-3" id="bookit-drag-handle-{{type}}-{{id}}"
    data-bookit-drag-handle-id="{{id}}"
    data-bookit-drag-handle-type="{{type}}"
    data-bookit-drag-handle-{{type}}-id="{{id}}">
    <button class="btn btn-sm btn-light rounded-pill pl-3 text-dark" style="cursor: grab;">
        {{#pix}} t/sort, core {{/pix}}
    </button>
</td>

{{#js}}
require(['mod_bookit/helpers/drag_handle'], function(component) {
    component.init('#bookit-drag-handle-{{type}}-{{id}}');
});
{{/js}}
